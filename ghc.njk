---
pagination:
    data: collections.ghc
    size: 1
    alias: image
permalink: "{{ image | slugify }}/"
---
<!DOCTYPE html>
<html lang="es-co">
    <head>
        <title>{{ image }}</title>
        <meta charset="utf-8"/>
        <link rel='stylesheet' 
          type='text/css'
          media='screen'
          href='/assets/css/style.css'/>

        <script src="/assets/js/openseadragon.min.js"></script>
    </head>
    <body>

        <div class="container">
            <ul class="breadcrumb">
                <li>
                    <a href="/{{ image | getGHCPrevious | slugify }}">Atras</a>
                </li>
                {% set parts = image.split('_') %}
                {% for item in parts %}
                    <li>{{ item }}</li>
                {% endfor %}
                <li>
                    <a href="/{{ image | getGHCNext | slugify }}">Siguiente</a>
                </li>
            </ul>
            <a href="/">Inicio</a>
            <div id="fmb-image"
         class="openseadragon">
                <script type="text/javascript">
                    OpenSeadragon({
                        id: "fmb-image",
                        prefixUrl: "/assets/images/",
                        tileSources: {
                            type: 'image',
                            url: '/{{ image }}'
                        }
                    });
                </script>
                <noscript>
                    <p>OpenSeadragon is not available unless JavaScript is enabled.</p>
                    <img src='{{ image }}'
                 height='600'/>
                </noscript>
            </div>
        </div>

    </body>
</html>